---
interface Props {
	title: string;
}

const { title } = Astro.props;

const canonicalURL = "";

---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">

		<meta charset="UTF-8" />
		<meta name="description" content="Weerawong Vonggatunyu's Portfolio website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta property="twitter:image" content="https://images.unsplash.com/photo-1622830608403-95bcbb22fa87?q=80&w=2970&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:title" content="Qu1etboy">
		<meta property="twitter:description" content="Weerawong Vonggatunyu's Portfolio website">
		<meta property="og:image" content="https://images.unsplash.com/photo-1622830608403-95bcbb22fa87?q=80&w=2970&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
		<meta property="og:title" content="Qu1etboy">
		<meta property="og:description" content="Weerawong Vonggatunyu's Portfolio website" />
		<meta property="og:url" content={canonicalURL}>
		<title>{title}</title>

	</head>
	<body class="font-jetbrains">
		<slot />
	</body>
</html>
